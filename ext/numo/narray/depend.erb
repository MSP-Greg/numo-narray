TAGSRC = \
 ../../ruby/include/ruby/*.h \
 ../../ruby/*.c \
 *.h \
 types/*.h \
 *.c \
 types/*.c

tags : TAGS
TAGS : $(TAGSRC)
	etags $(TAGSRC)

doc :
	yard doc *.c types/*.c

C_TMPL = <%=Dir.glob("gen/tmpl/*.c").join(" ")%>

COGEN = gen/cogen.rb
DTYPE = gen/dtype.erb.c
COGEN_DTYPE = $(COGEN) -l $(DTYPE)
DEPENDS = $(C_TMPL) $(DTYPE) gen/*.rb

GEN_DEF = <%= GEN_DEF="gen/def" %>

<% Dir.glob(GEN_DEF+"/*.rb").map{|s| File.basename(s,".rb")}.each do |t| %>
types/<%=t%>.c: $(GEN_DEF)/<%=t%>.rb $(DEPENDS)
	$(MAKEDIRS) $(@D) types
	ruby $(COGEN_DTYPE) $(GEN_DEF)/<%=t%>.rb > $@
<% end %>

types/bit.c: gen/bit.erb.c $(DEPENDS)
	$(MAKEDIRS) $(@D) types
	ruby $(COGEN) gen/bit.erb.c > $@

CLEANOBJS = *.o */*.o *.bak types/*.c
